<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ThaiDB : <%- title %></title>
    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
        integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
        crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
        integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA=="
        crossorigin=""></script>
    <script src="/thailandWithName.js"></script>
    <script src="/mapToken.js"></script>
    <style>
        #mapid { 
            width: 50vw;
            height: 70vh;
            margin-left: 20px;
        }
        .info {
            padding: 6px 8px;
            font: 14px/16px Arial, Helvetica, sans-serif;
            background: white;
            background: rgba(255,255,255,0.8);
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            border-radius: 5px;
        }
        .info h4 {
            margin: 0 0 5px;
            color: #777;
        }
    </style>
</head>
<body>
    <%- include('header'); -%>
    <h1><%- title %></h1>
    <div><%= articles.length %> results</div>
    <ul class="articles" style="display: inline-block; float:left">
        <% for(var i=0; i<articles.length; i++) {%>
        <li class="article">
            <a href="/group/geo/<%- attribute %>/<%- encodeURIComponent(articles[i].name) %>/<%- encodeURIComponent(value) %>">
            <span><%= articles[i].name %>,<%= articles[i].count %></span>
            </a>
        </li>
        <% } %>
    </ul>
    <div style="display: inline-block; float:left">
        <div id="mapid"></div>
    </div>
    <script>
    var map = L.map('mapid').setView([13.7563, 100.5018], 6);

    L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=' + mapboxAccessToken, {
        maxZoom: 18,
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
            '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
            'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
        id: 'mapbox.streets'
    }).addTo(map);

    // Add count
    let data = <%- JSON.stringify(data) %>;
    provinceData.features.forEach(record => {
        let name = record.properties.name.toLowerCase();
        let d = data.find(d => d.name == name);
        if (d) {
            record.properties.count = d.count;
            console.log(`${name} found`);
        }
        else {
            console.log(`${name} not found`);
        }
    });

    function getColor(d) {
        return d > 40 ? '#800026' :
            d > 30  ? '#BD0026' :
            d > 20  ? '#E31A1C' :
            d > 10  ? '#FC4E2A' :
            d > 5   ? '#FD8D3C' :
            d > 2   ? '#FEB24C' :
            d > 1   ? '#FED976' :
            d > 0   ? '#FFEDA0' :
                      '#FFFFFF';
    }

    function style(feature) {
        return {
            fillColor: getColor(feature.properties.count),
            weight: 2,
            opacity: 1,
            color: 'white',
            dashArray: '3',
            fillOpacity: 0.7
        };
    }

    // Info control
    let info = L.control();

    info.onAdd = function (map) {
        this._div = L.DomUtil.create('div', 'info');
        this.update();
        return this._div;
    };

    info.update = function (props) {
        this._div.innerHTML = '<h4>Amount of articles</h4>' +  (props ?
            '<b>' + props.name + '</b><br />' + (props.count || 0) + ' articles'
            : 'Hover over a province');
    };

    info.addTo(map);

    function highlightFeature(e) {
        let layer = e.target;
        info.update(layer.feature.properties);
    }

    function resetHighlight(e) {
        info.update();
    }

    function onEachFeature(feature, layer) {
        layer.on({
            mouseover: highlightFeature,
            mouseout: resetHighlight
        });
    }

    L.geoJson(provinceData, {
        style: style,
        onEachFeature: onEachFeature
    }).addTo(map);
    </script>
</body>
</html>