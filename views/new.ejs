                    appendProduct(data.categories.product);
                }

                function getProduct(product) {
                    return {
                        kind: product.getElementsByClassName("product-kind")[0].value,
                        hygiene: {
                            body: product.getElementsByClassName("product-hygiene-body")[0].value,
                            head: product.getElementsByClassName("product-hygiene-head")[0].value,
                            kind: product.getElementsByClassName("product-hygiene-kind")[0].value,
                        },
